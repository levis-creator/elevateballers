---
export const prerender = false;
export const ssr = false;

export async function getStaticPaths() {
  return [];
}

import AdminLayout from '../../../../features/cms/components/AdminLayout.astro';
import MatchDetailView from '../../../../features/cms/components/MatchDetailView';
import { checkAuth } from '../../../../features/cms/lib/auth-astro';

const user = await checkAuth(Astro.request);
if (!user) {
  return Astro.redirect('/admin/login', 302);
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/matches', 302);
}
---

<AdminLayout title="Match Details - Admin">
  <MatchDetailView matchId={id} client:load />
</AdminLayout>

